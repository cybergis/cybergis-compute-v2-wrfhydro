{
    "name": "WRFHydro",
    "description": "WRFHydro",
    "estimated_runtime": "vary by model size, simulation period and configurations",
    "container": "wrfhydro-5.x",
    "pre_processing_stage": "./compile.sh",
    "execution_stage": "./main.sh",
    "post_processing_stage": "./postprocessing.sh",
    "slurm_input_rules": {
   
           "time": {
                "max": 10,
                "min": 1,
                "default_value": 1,
                "step": 1,
                "unit": "Hours"   
            },
            "num_of_task": {
                "max": 127,
                "min": 1,
                "default_value": 4,
                "step": 1
            },
            "memory_per_cpu": {
                "max": 4,
                "min": 1,
                "default_value": 1,
                "step": 1,
                "unit": "GB"
            }    
    },
    "require_upload_data": true,
    "supported_hpc": ["keeling_community", "expanse_community"],
    "default_hpc": "keeling_community",
    "param_rules": {
        "git_branch_tag_commit": {
            "type": "string_input",
            "require": true,
            "default_value": "v5.2.0-rc1"
        },
        "lsm": {
            "type": "string_option",
            "options": ["Noah", "NoahMP"],
            "default_value": "NoahMP"
        }
    },
    "default_result_folder_downloadable_path": "/"
}
